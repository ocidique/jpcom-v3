---
interface Props {
  to: string;
}

const { to } = Astro.props;
---

<a
  href={to}
  class="inline-flex items-center space-x-4 font-medium tracking-wide text-orange-600 hover:text-orange-500 hover:underline"
>
  <slot />
  <span class="ml-4">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
    </svg>
  </span>
</a>
